@model Book
@{
    ViewData["Title"] = "Edit Book";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <div class="form-group mb-2">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="AuthorId">Author</label>
                    <select asp-for="AuthorId" class="form-select" asp-items="@(new SelectList(ViewBag.Authors, "Id", "Name"))"></select>
                    <span asp-validation-for="AuthorId" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="GenreId">Genre</label>
                    <select asp-for="GenreId" class="form-select" asp-items="@(new SelectList(ViewBag.Genres, "Id", "Name"))"></select>
                    <span asp-validation-for="GenreId" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <label asp-for="DiscountPercentage"></label>
                    <input asp-for="DiscountPercentage" class="form-control" />
                </div>
                <div class="form-check mb-2">
                    <input asp-for="IsFeatured" class="form-check-input" />
                    <label asp-for="IsFeatured" class="form-check-label"></label>
                </div>
                <div class="form-check mb-2">
                    <input asp-for="IsNew" class="form-check-input" />
                    <label asp-for="IsNew" class="form-check-label"></label>
                </div>
                <div class="form-check mb-2">
                    <input asp-for="InStock" class="form-check-input" />
                    <label asp-for="InStock" class="form-check-label"></label>
                </div>
                <div class="mb-2">
                    <p>Current Main Image: @Model.MainImageUrl</p>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="MainImage">Replace Main Image</label>
                    <input asp-for="MainImage" type="file" class="form-control" />
                    <span asp-validation-for="MainImage" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <p>Current Hover Image: @Model.HoverImageUrl</p>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="HoverImage">Replace Hover Image</label>
                    <input asp-for="HoverImage" type="file" class="form-control" />
                    <span asp-validation-for="HoverImage" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ImageFiles">Add Gallery Images</label>
                    <input asp-for="ImageFiles" type="file" multiple class="form-control" />
                    <span asp-validation-for="ImageFiles" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
