@model List<Book>
@{
    ViewData["Title"] = "Books";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Books</h2>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Author</th>
            <th>Genre</th>
            <th>Price</th>
            <th>In Stock</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var b in Model)
    {
        <tr>
            <td>@b.Id</td>
            <td>@b.Title</td>
            <td>@b.Author?.Name</td>
            <td>@b.Genre?.Name</td>
            <td>@b.Price</td>
            <td>@b.InStock</td>
            <td>
                <a asp-action="Edit" asp-route-id="@b.Id" class="btn btn-sm btn-warning">Edit</a>
            </td>
        </tr>
    }
    </tbody>
</table>
